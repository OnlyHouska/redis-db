{
    "require": {
        "php": "^8.4",
        "laravel/framework": "^12.0",
        "laravel/tinker": "^2.10.1",
        "ext-redis": "*"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pail": "^1.2.2",
        "laravel/pint": "^1.24",
        "laravel/sail": "^1.41",
        "mockery/mockery": "^1.6",
        "nunomaduro/collision": "^8.6",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^11.5.3"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "composer-run": [
            "docker compose run --rm composer-app composer"
        ],
        "composer-install": [
            "docker compose run --rm composer-app composer install"
        ],
        "composer-require": [
            "docker compose run --rm composer-app composer require"
        ],
        "composer-require-dev": [
            "docker compose run --rm composer-app composer require --dev"
        ],
        "composer-update": [
            "docker compose run --rm composer-app composer update"
        ],
        "phpstan": [
            "docker compose run --rm composer-app php vendor/bin/phpstan analyze --memory-limit=1G"
        ],
        "cs-fixer": [
            "docker compose run --rm composer-app php vendor/bin/php-cs-fixer fix ./src"
        ],
        "unit": [
            "docker compose run --rm composer-app php vendor/bin/phpunit tests"
        ],
        "php-run": [
            "docker compose run --rm composer-app php"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    }
}
